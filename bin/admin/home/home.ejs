<%- layout("admin/layouts/boilerplate") %>

<!-- Content Wrapper -->
<div class="right-container">
  <!-- Dashboard Header -->
  <div class="right-container-header">
    <h1>Dashboard</h1>
    <div class="user-menu">
      <img src="https://via.placeholder.com/40" alt="User Avatar">
    </div>
  </div>

  <!-- Stats Section -->
  <div class="stats-container">
    <div class="stat-card purple">
      <h3>Active Users</h3>
      <p>100</p>
    </div>
    <div class="stat-card orange">
      <h3>Number of Impressions</h3>
      <p>45</p>
    </div>
    <div class="stat-card pink">
      <h3>Reports & Suggestions</h3>
      <p>6</p>
    </div>
    <div class="stat-card green">
      <h3>Number of Visitors</h3>
      <p>50</p>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="charts-container">
    <!-- User Status Bar Chart -->
    <div class="chart">
      <h3>User Status</h3>
      <div class="bar-chart">
        <div class="bar red">Number of Alumni: 103</div>
        <div class="bar yellow">University Students: 95</div>
        <div class="bar pink">Working Employees: 103</div>
        <div class="bar orange">Unknown Visitors: 76</div>
      </div>
    </div>

    <!-- Number of Visitors Pie Chart -->
    <div class="chart">
      <h3>Number of Visitors</h3>
      <div class="pie-chart-container">
        <div class="pie-chart"></div>
        <p>Active Users: 60%</p>
        <p>Unknown Visitors: 40%</p>
      </div>
    </div>
  </div>

  <!-- Job Search Data -->
  <div class="charts-container">
    <!-- Highest Job Search -->
    <div class="chart">
      <h3>Highest Number of Job Searches</h3>
      <div class="job-searches">
        <p>Software Developer</p>
        <div class="bar red"></div>
        <p>Cyber Security</p>
        <div class="bar blue"></div>
        <p>Data Engineers</p>
        <div class="bar purple"></div>
      </div>
    </div>

    <!-- Most Highlighted Post -->
    <div class="chart">
      <h3>Most Highlighted Post</h3>
      <ul>
        <li>Internship - 234 times applied</li>
        <li>Full Time - 400 times applied</li>
        <li>Hiring - 160 times applied</li>
        <li>Remote - 120 times applied</li>
      </ul>
    </div>
  </div>
</div>