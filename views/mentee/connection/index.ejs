<%- layout("/mentee/layouts/boilerplate") -%>

<div class="container mt-3">
    <div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Your Mentors</h1>
        </div>

        <div><button><a href="/mentee/mentorList">+ add mentor</a></button></div>
    </div>
    <% if (connectedMentors.length === 0) { %>
    <div class="alert alert-info">
        You haven't connected with any mentors yet.
    </div>
    <% } else { %>
    <div class="list-group">
        <% connectedMentors.forEach(mentor => { %>
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1"><%= mentor.user.username %></h5>
                <p class="mb-0 text-muted"><%= mentor.expertise.join(", ") %></p>
            </div>
            <div class="action-buttons">
                <a href="/mentee/schedule/<%= mentor.user._id %>" class="badge badge-schedule">Schedule</a>
                <a href="/chat/<%= loggedInUserId %>/<%= mentor.user._id %>" class="badge badge-chat">Chat</a>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>
