<% layout("/mentee/layouts/boilerplate") -%>
<div class="container mt-5">
    <h2 class="text-center">Mentee Profile</h2>

    <div class="profile-info">
        <h4>Username: <%= mentee.user.username %></h4>
        <h4>Role: <%= mentee.user.role %></h4>
        <h4>Goals: <%= mentee.goals || 'No goals specified' %></h4>
        <h4>Education: <%= mentee.educationLevel||'N/A'%></h4>
        <h4>Bio: <%= mentee.bio||'N/A'  %></h4>
        <!-- <h4>Interests: <#%= mentee.interests.join(", ") || 'No interests specified' %></h4>
        <h4>Progress: <#%= mentee.progress || 'No progress available' %></h4> -->
    </div>

    <!-- Show edit and delete options if the logged-in user is the owner -->
    <% if (isOwner) { %>
        <div class="profile-actions mt-3">
            <a href="/mentee/profile/edit/<%= mentee.user._id %>" class="btn btn-primary">Edit Profile</a>
            <form action="/mentee/profile/delete/<%= mentee.user._id %>" method="POST" class="mt-2" onsubmit="return confirm('Are you sure you want to delete your profile?');">
                <button type="submit" class="btn btn-danger">Delete Profile</button>
            </form>
        </div>
    <% } %>
</div>
