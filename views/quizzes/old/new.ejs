<%- layout("/layouts/boilerplate") -%>

<h1>Create a New Quiz</h1>

<form action="/groups/<%= group._id %>/quizzes" method="POST">
    <label for="title">Quiz Title:</label>
    <input type="text" name="quiz[title]" required />

    <% for (let i = 0; i < 5; i++) { %>
    <div>
        <label for="questions[<%= i %>][questionText]">Question <%= i + 1 %>:</label>
        <input type="text" name="quiz[questions][<%= i %>][questionText]" required />

        <label>Options:</label>
        <input type="text" name="quiz[questions][<%= i %>][options][]" placeholder="Option 1" required />
        <input type="text" name="quiz[questions][<%= i %>][options][]" placeholder="Option 2" required />
        <input type="text" name="quiz[questions][<%= i %>][options][]" placeholder="Option 3" required />
        <input type="text" name="quiz[questions][<%= i %>][options][]" placeholder="Option 4" required />

        <label for="correctAnswer">Correct Answer (Index 1-4):</label>
        <input type="number" name="quiz[questions][<%= i %>][correctAnswer]" min="1" max="4" required />
    </div>
    <% } %>

    <button type="submit">Create Quiz</button>
</form>